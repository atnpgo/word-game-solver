{
    "manifest_version": 2,
    "name": "Word Game Solver",
    "version": "1.0",
    "description": "Automatically solves word games.",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": ["solver.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/page-16.png",
            "32": "icons/page-32.png"
        },
        "default_title": "Wordle me this!"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "word-game-solver@atnpgo.wtf"
        }
    }
}
